<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Carro_compra">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Productos Guardados"
                android:layout_marginBottom="50dp"
                android:textColor="@color/teal_700"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/CCCantidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secundario"
                            android:padding="15dp"
                            android:layout_margin="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/CCUsuario"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:hint="Usuario"
                            android:textSize="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:id="@+id/CCNombre"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:hint="Producto 1"
                            android:textSize="18dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="fill_vertical"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/CCComprar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_button"
                            android:text="Comprar"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


</FrameLayout>