<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/txtMPProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/primario"
                android:textSize="26dp"
                android:hint="Nombre del producto"/>
            <TextView
                android:id="@+id/txtMPNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:hint="Usuario"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/productoImage"
                android:layout_width="250dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">
            </ImageView>
            <TextView
                android:id="@+id/txtMPProducto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:hint="Producto 1"
                android:textSize="18dp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/favorito"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border">
                </ImageView>
                <ImageView
                    android:id="@+id/comentar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share">
                </ImageView>
                <ImageView
                    android:id="@+id/guardar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_save_border">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/txtMPLike"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="100">
                </TextView>
                <TextView
                    android:id="@+id/txtMPComentar"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="">
                </TextView>
                <TextView
                    android:id="@+id/txtMPGuardar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primario"
                android:gravity="left"
                android:text="DescripciÃ³n"
                android:textSize="24dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtMPDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Detalle"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primario"
                android:gravity="left"
                android:text="Precio"
                android:textSize="24dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtMPMonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Detalle"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginBottom="15dp">
                <Button
                    android:id="@+id/MPmenos"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_button"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_gravity="left"/>
                <EditText
                    android:id="@+id/txtMPCantidad"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:inputType="number"/>
                <Button
                    android:id="@+id/MPmas"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_button"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_gravity="left"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <Button
                        android:id="@+id/MPcomprar"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_button"
                        android:text="Comprar"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>